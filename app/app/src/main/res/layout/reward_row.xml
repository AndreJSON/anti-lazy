<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/row_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="232dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:max="100"
        android:progress="70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/row_button"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="236dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Collect"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/row_progress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_progress"
        app:layout_constraintTop_toTopOf="@+id/row_progress" />

    <TextView
        android:id="@+id/row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="@string/reward1"
        app:layout_constraintBottom_toTopOf="@+id/row_progress"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>